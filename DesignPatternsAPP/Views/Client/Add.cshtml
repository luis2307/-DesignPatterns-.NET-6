@using DesignPatternsAPP.Models.ViewModels
@model FormClientViewModel

@{
    ViewData["Title"] = "Add";
}


<form asp-controller="Client" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CountryId"></label>
        <select class="form-control" asp-for="CountryId" asp-items="@ViewBag.Countries">
            <option value="">--- Selecciona País ---</option>
        </select>
        <span asp-validation-for="CountryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OtherCountry"></label>
        <input class="form-control" asp-for="OtherCountry" />
        <span asp-validation-for="OtherCountry" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Guardar</button>
    </div>
</form>